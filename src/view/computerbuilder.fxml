<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml" prefWidth="500" spacing="10" fx:controller="controller.ComputerBuilderController">
    <ImageView>
        <image>
            <Image url="@parts.jpg"/>
        </image>
    </ImageView>
    <HBox alignment="CENTER">
        <Label styleClass="h1" text="Computer Builder"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Button styleClass="largeButton" fx:id="viewCatalogueBtn" onAction="#handleViewCatalogue"/>
        <Button styleClass="largeButton" fx:id="viewBuildBtn" onAction="#handleViewBuild"/>
    </HBox>
    <HBox alignment="CENTER">
        <Button onAction="#handleClose" text="Quit"/>
    </HBox>
    <stylesheets>
        <URL value="@computerbuilder.css"/>
    </stylesheets>

</VBox>
